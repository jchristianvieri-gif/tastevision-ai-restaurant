{
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "build": "npm run build:frontend && npm run build:admin",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "deploy": "vercel --prod",
    "setup:n8n": "node scripts/setup-n8n.js"
  }
}
